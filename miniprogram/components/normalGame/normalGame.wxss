.normal-game{
  display: flex;
  flex-direction: column;
}
.normal-game .game-list-item{
  
  margin-bottom: 20rpx;
}

.game-list-item .time{
  display: block;
  padding-left: 10rpx;
}

.normal-game .game-list-item .stage-card{
  position: relative;
}
.normal-game .game-list-item .stage-card image{
  width: 50vw;
  height: 100px;
}
.normal-game .game-list-item .stage-card span{
  position: absolute;
  left: 0;
  bottom: 0;
  color:#fff;
  display: inline-block;
  background: rgba(0,0,0,0.8);
  font-size: 30rpx;
  width: 50vw;
  padding: 8rpx 0rpx;
  padding-left: 10rpx;

}

