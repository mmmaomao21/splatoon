@import "../../style/guide.wxss";

.salmon-detail-list {
  margin-bottom: 10rpx;
  float: left;
  width: 100%;
}
.salmon-detail-list .title {
  display: none;
  margin: 4rpx 0;
}
.salmon-detail-list .card {
  padding: 0.4rpx;
  border: 6rpx solid;
  border-radius: 8rpx;
  width: 100%;
  display: inline-block;
  position: relative;
}
.salmon-detail-list .card .card-title {
  width: 100%;
  display: block;
  font-size: 32rpx;
  border-bottom: 0.4rpx dashed;
  padding-bottom: 0.4rpx;
  margin-bottom: 0.6rpx;
}
.salmon-detail-list .card .card-title image {
  width: 60rpx;
  height:60rpx;
  margin-right: 16rpx;
  vertical-align: sub;
}

.salmon-detail-list .card .card-title span{
  vertical-align: super;
}
.salmon-detail-list .card .card-content image {
  width: 100%;
  height:400rpx;
 /* float:left; */
 /* margin-right: 10rpx; */

}

.salmon-detail-list .card .card-content .name{
  position: absolute;
  top: 400rpx;
    right: 10rpx;
    background: rgba(0,0,0,0.7);
    color: #fff;
    padding: 4px 6px;
    font-size: 14px;
    border-radius: 8px;
}
.salmon-detail-list .card .card-content .weapon {
 float:right
}
.salmon-detail-list .card .card-content .weapon image {
  border-radius: 0;
  width: 68rpx;
  height:68rpx;
}

.salmon-gear{
 float: right;
 width: 70rpx;
  height: 70rpx;
}